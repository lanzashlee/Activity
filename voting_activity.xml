<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#4F586A"
    tools:context=".VotingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/pinas" />
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:background="#CC0E24"
            android:id="@+id/textViewPresident"
            android:hint="Enter President"
            android:paddingLeft="15dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="#0136A5"
            android:hint="Enter Vice President:"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:id="@+id/textViewVicePresident"
            android:textColor="#FFF"
            android:textColorHint="#FFF" />
        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#CF3232"
            android:onClick="goToResultactivity"
            android:text="Submit"
            android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>
